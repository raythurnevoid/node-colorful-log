{
	"compilerOptions": {
		"baseUrl": ".",
		"lib": [
			"ES2019",
			"DOM"
		],
		"target": "ES2019",
		"module": "CommonJS",
		"outDir": "dist",
		"moduleResolution": "node",
		"importsNotUsedAsValues": "error",
		"esModuleInterop": true,
		"isolatedModules": true,
		"keyofStringsOnly": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/node_modules/**/*",
	]
}